package {	import flash.display.MovieClip;	import flash.events.Event;	import flash.geom.Point;		public class Robak extends MovieClip	{				private var biedronka:Biedronka;		private var kropelki:Array;				public function Robak(x:Number, y:Number, b:Biedronka, krople:Array)		{			this.x = x;			this.y = y;			this.biedronka = b;			this.kropelki = krople;			this.addEventListener(Event.ADDED_TO_STAGE, checkHitKropelka);			this.addEventListener(Event.ENTER_FRAME, checkHitBiedronka);		}				//jeśli robaczek stanie na kropelce, jest wtedy usuwany		public function checkHitKropelka(e:Event)		{			for (var i = 0; i < kropelki.length; i++){				if(this.hitTestObject(kropelki[i]))				{					MovieClip(parent).removeChild(this);				}			}		}				//jeśli biedronka "zderzy" się z robaczkiem, jest on		//wtedy usuwany		public function checkHitBiedronka(e:Event)		{			if (this.hitTestObject(biedronka))			{				MovieClip(parent).removeChild(this);			}		}	}}