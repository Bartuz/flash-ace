package {	import flash.events.*;	import flash.display.*;	public class Biedronka extends MovieClip	{		// wlasciwosci klasy		private var speedNormal;		private var keyUp:Boolean;		private var keyDown:Boolean;		private var keyLeft:Boolean;		private var keyRight:Boolean;		private var predkosc:Number;		private var rotationSpeed:Number;		// konstruktor		public function Biedronka()		{			this.speedNormal = 6;			this.predkosc = speedNormal;			this.keyUp = false;			this.keyDown = false;			this.keyLeft = false;			this.keyRight = false;			this.rotationSpeed = 5;			stage.addEventListener(KeyboardEvent.KEY_DOWN, pressKey);			stage.addEventListener(KeyboardEvent.KEY_UP, releaseKey);			this.addEventListener(Event.ENTER_FRAME, circleEnterFrame);		}		private function pressKey(pEvent)		{			// jeśli klawisz jest wciśnięty, przekształć zmienną na true			switch (pEvent.keyCode)			{				case 38 :					keyUp = true;					break;				case 40 :					keyDown = true;					break;				case 37 :					keyLeft = true;					break;				case 39 :					keyRight = true;					break;			}		}			private function circleEnterFrame(pEvent)		{			var velocity = 0;			if (keyUp)			{				velocity =  -  predkosc;			}			if (keyDown)			{				velocity = predkosc;			}			if (keyLeft)			{				pEvent.currentTarget.rotation -=  rotationSpeed;			}			if (keyRight)			{				pEvent.currentTarget.rotation +=  rotationSpeed;			}			// konwersja stopnie na radiany			var angleRadian = pEvent.currentTarget.rotation / 180 * Math.PI;			// przesuń obiekt zgodnie z radianem i prędkością			pEvent.currentTarget.x +=  Math.cos(angleRadian) * velocity;			pEvent.currentTarget.y +=  Math.sin(angleRadian) * velocity;		}		private function releaseKey(pEvent)		{			if (pEvent.keyCode == 38)			{				keyUp = false;			}			else if (pEvent.keyCode == 40)			{				keyDown = false;			}			else if (pEvent.keyCode == 37)			{				keyLeft = false;			}			else if (pEvent.keyCode == 39)			{				keyRight = false;			}		}	}}