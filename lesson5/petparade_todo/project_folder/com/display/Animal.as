package com.display {	import flash.display.MovieClip;	import com.interfaces.AnimalsInterface;	import flash.events.Event;	import flash.events.MouseEvent;		public class Animal extends MovieClip implements AnimalsInterface {		public var predkosc:Number;		public var nazwa:String;		public function Animal() {			this.predkosc = 5;			this.nazwa = "Nazwa";			this.addEventListener(MouseEvent.MOUSE_DOWN, initDrag);			this.addEventListener(MouseEvent.MOUSE_UP, finishDrag);		}				private function initDrag(e:MouseEvent):void{			this.startDrag(false);		}				private function finishDrag(e:MouseEvent):void{			this.stopDrag();		}		public function makeMove():void{			//przylaczenie zdarzenia ENTER_FRAME			this.x += predkosc;			this.addEventListener(Event.ENTER_FRAME, ruszaj);			this.gotoAndStop(2);		}				public function stopMove():void{			this.removeEventListener(Event.ENTER_FRAME, ruszaj);			this.gotoAndStop(1);		}				private function ruszaj(e:Event){			this.x += predkosc;		}		public function setName(nazwa:String){			this.nazwa = nazwa;		}					}	}